# Venom AI System - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Required API Keys
# =============================================================================

# Google Gemini API Key (REQUIRED)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (Optional - for additional AI features)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Performance Settings
# =============================================================================

# Enable Turbo Mode (true/false)
VENOM_BOOST=true

# Debug Mode (true/false)
DEBUG_MODE=false

# Polling rates (in seconds)
POLL_RATE=0.03
WEB_POLL_RATE=0.5

# =============================================================================
# Cache Configuration
# =============================================================================

# Enable smart caching
CACHE_ENABLED=true
CACHE_SIZE=2000
CACHE_TTL=600

# =============================================================================
# Threading Configuration
# =============================================================================

MAX_WORKERS_THREADS=32
MAX_WORKERS_PROCESSES=8
MAX_CONCURRENT_TASKS=15

# =============================================================================
# Server Configuration
# =============================================================================

# Port for API server
PORT=8000

# Host
HOST=0.0.0.0

# Streamlit HUD Port
STREAMLIT_SERVER_PORT=8501

# =============================================================================
# Database Configuration (if applicable)
# =============================================================================

DATABASE_URL=sqlite:///./venom.db

# =============================================================================
# Logging Configuration
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=storage/logs/venom.log

# =============================================================================
# Voice Configuration
# =============================================================================

# TTS Engine (edge, google, openai)
TTS_ENGINE=edge
TTS_VOICE=en-US-AriaNeural

# =============================================================================
# Vision Configuration
# =============================================================================

# YOLO Model Size (n, s, m, l, x)
YOLO_MODEL_SIZE=n

# =============================================================================
# Deployment Configuration
# =============================================================================

# Environment (development, production, staging)
ENVIRONMENT=development

# For Kubernetes/Docker deployment
KUBERNETES_ENABLED=false
DOCKER_BUILD=false
